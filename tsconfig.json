{
    "compilerOptions": {
      "jsx": "react",
      "module": "ES2022",
      "target": "ES2022",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["frontend/**/*", "backend/**/*", "src/**/*", "shared/**/*"]
}